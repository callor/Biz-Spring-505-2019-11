<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.biz.bbs.mapper.BbsDao">
 
 	<insert id="insert">
 	INSERT INTO `tbl_bbs`
			(`BBS_ID`,
			`BBS_P_ID`,
			`BBS_WRITER`,
			`BBS_DATE`,
			`BBS_TIME`,
			`BBS_SUBJECT`,
			`BBS_CONTENT`,
			`BBS_COUNT`)
			VALUES
			(#{bbs_id},
			#{bbs_p_id},
			#{bbs_writer},
			#{bbs_date},
			#{bbs_time},
			#{bbs_subject},
			#{bbs_content},
			#{bbs_count}
			);
 	</insert>
 	
 	<update id="update">
 		UPDATE `tbl_bbs`
		SET
			`bbs_p_id` = #{bbs_p_id},
			`bbs_writer` = #{bbs_writer},
			`bbs_date` = #{bbs_date},
			`bbs_time` = #{bbs_time},
			`bbs_subject` = #{bbs_subject},
			`bbs_content` = #{bbs_content},
			`bbs_count` = #{bbs_count}
		WHERE `BBS_ID` = #{bbs_id};
 	</update>
 
 </mapper> 